.rotCol6
    rotCol6Width = areaWidth - 100px
    rotCol6Height = 260px
    
    position relative
    overflow hidden
    // background-color: #cccccc
    border-radius: 4px
    margin: 20px auto 30px
    
    &
    .item
    .pic
        width: rotCol6Width
        height: auto
        overflow hidden
        
    .item
        position relative
        width: ((areaWidth / 18) - 10px * 18px)
        height auto

        .pic
            // pic()
            background-size: 60% auto
            position relative
            background: none
            margin-bottom: 6px

            &
            & a
                width: 100%
                height 60px    

            img
                // img()


        .title
            // title()
            position: relative
            min-height 20px
            overflow hidden
            background: none

            .text
                // width: 80%
                // margin-left: 1em
                margin-top: 0
                // overflow hidden
                line-height: 20px
                text-align: center

            &
            a
                font-size: 12px
                color: #333333
               
    btnWidth = 40px

    .rot-prev
    .rot-next
        position: absolute
        width: btnWidth
        height 62px
        top: 50%
        margin-top: -(@height / 2)
        z-index 3
        cursor pointer
        // display: none
        transition: all 0.5s
        background-size: auto
        // color: #ffffff
    
        &:hover
            opacity 1

        &:active
            opacity 0.3

        &.swiper-button-disabled
            opacity 0.3 !important
            pointer-events: visible
            cursor: default

    .rot-prev
        left - btnWidth
        // background-image: url(rot-icon-prev.png)

    .rot-next
        right - btnWidth
        // background-image: url(rot-icon-next.png)
    
    &:hover
        .rot-prev
            left 0
        .rot-next
            right 0

    .swiper-pagination
        bottom: 12px
        left: auto
        right: 10px
        width: auto

    .swiper-pagination-bullet
        width: 8px
        height: 8px
        display: inline-block
        border-radius: 100%
        background: #ffffff
        opacity: 1

    .swiper-pagination-bullet-active 
        background: rotSwiperPaginationBulletActiveBgColor

.is-mobile
    rotHeight = 220px
    
    .rotCol6
        position relative
        overflow visible
        width: 96%
        margin: 0 2%
        
        &
        .item
        .pic
            height: rotHeight
        
        .item
        .pic
            width: 100%
            overflow hidden

        .item
            position relative
            .pic
                // position: absolute
                // z-index 1
                // background-image: url(/bundle/icon-logo.png)
                // background-position: center center
                // background-size: 60% auto
                // background-color: #cccccc
                // background-repeat: no-repeat

                img
                    position: absolute
                    width: auto
                    height 100%
                    top: 50%
                    left: 50%
                    transform: translate(-50%, -50%)

            .title
                width 100%
                position: absolute
                z-index 2
                bottom: 0
                left: 0
                // background-image: url(rot-title-bg.png)
                height: 49px
                line-height: @height
                
                .text
                    width: 93%
                    margin: 0 auto
                &
                a
                    font-size: 16px
                    color: #ffffff
        .rot-prev
        .rot-next
        .swiper-pagination
            display: none