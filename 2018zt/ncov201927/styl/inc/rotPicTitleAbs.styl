
rotPicTitleAbsItemBoxHeight = 459px

.rotPicTitleAbsBoxBox
    background: #f9f9f9
    padding: 30px 0
    margin-bottom: 0

.rotPicTitleAbsBox
    position: relative
    width: (1174px + 60px * 2)
    // height rotPicTitleAbsItemBoxHeight
    margin: 0 auto

    .rotPicTitleAbs
        width: 1174px
        height 440px
        margin: 0 auto
        // border: 1px #ffffff solid

    .rotPicTitleAbs-prev
    .rotPicTitleAbs-next
        color: var(--moo-color)
        outline: none
        margin-top: -44px

    // .rotPicTitleAbs-prev
        // 
    .rotPicTitleAbs-next
        margin-right: 0

    .rotPicTitleAbs-pagination
        left: 50%
        transform: translateX(-50%)
        // width: 50%
        // border: 1px solid #ffffff

        .swiper-pagination-bullet
            outline: none
            width: 60px
            height 4px
            border-radius: (@height / 2)
            background-color: #333333
            // opacity 1 

        .swiper-pagination-bullet-active
            background-color: var(--moo-color)

        .swiper-pagination-bullet+.swiper-pagination-bullet
            margin-left: 6px


    .itemBox
        display: flex
        justify-content: space-between
        height rotPicTitleAbsItemBoxHeight

    .itemBoxLeft
        position: relative
        height rotPicTitleAbsItemBoxHeight

        .pic
            pic()

            &
            & a
                width rotPicTitleAbsItemBoxHeight
                height rotPicTitleAbsItemBoxHeight

            img
                img()
                height 100%
                width: auto

        .title
            title()
            width rotPicTitleAbsItemBoxHeight
            font-size: 16px

            &
            & a 
                color #FFF
                
            .text
                text()
                

    .itemBoxRight
        display: flex
        justify-content: space-between
        overflow hidden
        width: 705px

        .itemBoxRight-item
            itemBoxRightItemWidth = 230px
            width: itemBoxRightItemWidth
            height rotPicTitleAbsItemBoxHeight
            background-color: #ffffff
            position relative

            .pic
                pic()
                position relative
                
                &
                & a
                    width itemBoxRightItemWidth
                    height itemBoxRightItemWidth

                img
                    img()
                    height 100%
                    width: auto

            .title
                title()
                width itemBoxRightItemWidth
                font-size: 16px
                position relative
                background: none
                height 230px
                position relative

                &
                & a 
                    font-size: 20px
                    color: rgb(1, 1, 1)
                    font-weight: bold
                    text-align: center
                
                .text
                    text()
                    width auto
                    margin: 30px 1em 20px
                    line-height: 32px
                    height (@line-height * 3)
                    overflow hidden
                    // border: red 1px solid 

                    a
                        height 100%
                        position relative

                .icon-jump
                    display: block
                    margin: 10px auto 0
                    width: 30px
                    height @width
                    background-image: url(icon-jump.png)
                    background-position: center center
                    background-repeat: no-repeat
                    background-size: 100% 100%

            &:nth-child(even)
                display: flex
                flex-direction: column-reverse
                justify-content: space-between

.item-picTitleAbs
    &-in // .item-picTitleAbs-in
        display: flex
        justify-content: space-around
        padding: 30px
        background: #ffffff
        margin: 0 50px

    picHeight = 350px

    .pic
        position: relative
        height picHeight
        border-radius: 4px
        overflow hidden

        img
            width: auto
            height picHeight

    // .textBox-in
    .textBox
        flex: 1 0
        margin-right: 40px
        display: flex
        flex-direction: column
        justify-content: center

        .bigTitle
            font-size: 32px
            line-height: 45px
            font-weight: 800
            margin-bottom: 20px
            padding-bottom: 6px
            position relative
            display: inline-block

            &:after
                content: ''
                position: absolute
                bottom: 0
                left: 50%
                transform: translateX(-50%)
                width: 100%
                height 3px
                background: #000000

        .text
            font-size: 20px
            line-height: 32px
            margin-bottom: 16px
            font-weight: 400

        .abs
            font-size: 16px
            line-height: 28px

