.list
    li
        liHeight = 38px
        font-size: 16px
        position relative
        line-height: liHeight
        padding-left: 20px
        
        &:before
            content: ''
            width: 4px
            height @width
            position: absolute
            top: ((liHeight - @height) / 2)
            left: 0
            background-color: var(--moo-color)
            pointer-events: none
            border-radius: 100%

        

