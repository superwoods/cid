.itemListLeftandRight
    padding-bottom: 20px
    // itemListLeftandRightBorderColor = #1f286f

    .title
        font-size: 18px
        line-height: 32px
        max-height: @line-height
        overflow hidden
        font-weight: 600
        display: flex
        align-items: baseline
        padding-left: 1em
        position relative
        margin-bottom: 12px

        &:before
            content: ''
            display: block
            width: 4px
            height 18px
            background-color: titleBeforeBgColor
            position: absolute
            left 0
            top: 6px

        &
        & a
            color: var(--spa-color-gray3)

    .abs
        // margin-bottom: 24px
        // padding-bottom: 18px
        text-indent: 2em
        color: #999999
        line-height: 24px
        display: inline
        // border-bottom: 1px absBorderBottomColor dashed

        a
            color: absAColor

    .pic
        width: 240px
        height 136px
        overflow hidden
        position relative
        background-image: url(/bundle/icon-logo.png)
        background-position: center center
        background-size: 30% auto
        background-color: var(--spa-color-gray9)
        background-repeat: no-repeat
        margin-right: 30px

        a
            width: 100%
            height 100%

        img
            position: absolute
            width: 100%
            height auto
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)
    
    .item
        display: flex
        flex-direction: row
        border-bottom: 1px var(--f7-theme-color) dashed
        flex-wrap: nowrap
        justify-content: space-between
        padding-top: 20px
        padding-bottom: 20px
        flex: 1 auto
        align-items: center

        &:nth-child(even)
            flex-direction: row-reverse

            .pic
                margin-right: 0
                margin-left: 30px

        .m
            color: var(--f7-theme-color)
            font-weight: 400

    .item-text-box
        flex: 1
        // width: 715px

.is-mobile
    .itemListLeftandRight
        .content
            width: 90%
            margin: 0 auto
        .item
            display: block

        .pic
            width: 100%
            height 190px
            margin-bottom: 10px
            border-radius: 4px
    
    .itemListLeftandRight .item:nth-child(even) .pic
        margin-left: 0

    .itemListLeftandRight .title
        max-height: none