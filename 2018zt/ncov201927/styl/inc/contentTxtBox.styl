.contentTxtBox

    width: 100%
    // padding-right: 2.5em
    // border-right: #f1f1f1 1px solid 

    
    .bigTitle
        padding-top: 30px
        padding-bottom: 10px

        &
        & h1
            font-weight: 400
            line-height: 1.6em
            font-size: 1.8em
            text-align: left

    .subTitle
        margin: 14px 0 18px
        font-size: 14px
        line-height: 26px
        text-align: left
        color: #999
        width: 100%
        border-bottom: 1px solid #e6e6e6
        font-style: italic

    .main-content-box
        text-align: left
        color: #333

        p
        
            margin-bottom: 15px
            line-height: 36px
            font-size: 1.2em

        img
            width: 100%!important
            height: auto!important

    .listBox
        width: 100%
        margin-top: 60px

        .colBig
            font-size: 22px
            line-height: 50px
            height: 50px
            
            &:after
                width: 4em

        .list
            li
                line-height: 32px
                // border-bottom-style: dashed 

                .title
                    font-size: 16px
                .abs
                    font-size: 12px
                    
                &:before
                    top: 14px


.is-mobile
    .contentTxtBox
        width: mobileWidth
        margin: 0 auto

        .main-content-box
            text-align: left

            p
                margin-bottom: 1em
                line-height: 1.8em
