// 访谈区域

.interview
    interviewOuterHeight = 680px

    height interviewOuterHeight
    
    .area
        height auto
        
    .col-bg-box
        margin-bottom: 45px

    .bg
        background-color: #ebebeb

    // interview-rot
    &-rot
        height 557px
        position: relative
        // overflow: visible
        // overflow: hidden

        &-item
            position: relative
            // overflow: hidden

            &-in
                position: absolute
                width: 837px
                right: 0
                top: 50%
                transform: translateY(-50%)

        &-pic
            width: 357px
            height 397px
            border: 20px solid #ffffff
            position relative
            overflow hidden

            img
                width: 100%
                height auto
                position: absolute
                top: 50%
                left: 50%
                transform: translate(-50%, -50%)

        &-text
            
           .title
                interviewTextHeight = 32px
                
                max-height interviewTextHeight * 2
                overflow hidden
                font-weight: 600
                margin-bottom: 0.4em

                &
                & a
                    font-size: 24px
                    line-height: interviewTextHeight
                    color: #000000
                &.tiny
                &.tiny a
                    font-size: 18px
                    
            .abs
                margin-bottom: 3em

                &
                & a
                    font-size: 14px
                    line-height: 24px
                    color: #888888

                &.big
                &.big a
                    font-size: 18px
 
        &-title
            position: absolute
            right: 0
            top: 50%
            transform: translateY(-50%)
            width: 380px

        &-btn
            width: 110px
            padding: 0 20px
            position relative
            margin-top: 80px

            &
            & a
                display: block
                background-color: #155aa1
                height 40px
                font-size: 18px
                line-height: @height
                color: #ffffff !important

            & a:hover
                font-weight: 600

            .icon-play
                iconPlayerBg = #397bbf
                width: 40px
                height @width 
                background-color: iconPlayerBg
                position: absolute
                top: 0
                right: 0

                &:after
                &:before
                    content: ''
                    display: block
                    position: absolute
                    top: 50%
                    left: 50%
                    transform: translate(-50%, -50%)
                
                &:after
                    width: 30px
                    height 30px
                    background-color: #ffffff
                    border-radius: 100%

                &:before
                    width: 0;
                    height: 0;
                    border-style: solid;
                    border-width: 6.5px 0 6.5px 10px;
                    border-color: transparent transparent transparent iconPlayerBg
                    z-index 2
                    margin-left: 2px


        ctlboxWidth = 100px;

        &-ctlbox
            position: absolute
            width: ctlboxWidth
            height 76%
            top: 50%
            left: 0
            transform: translateY(-50%)
            z-index 2
            display: none
            // border: red 1px solid 

        &-prev
        &-next
            borderWidth = 3px

            transform: rotate(90deg)
            right: auto
            z-index 3
            width: 36px
            height: @width
            left: ((ctlboxWidth - @width) / 2 - borderWidth)
            background-color: #a1a1a1
            background-size: auto 40%
            border-radius: 100%
            border: borderWidth solid #ffffff
            
        &-prev
            top: 13px
            bottom: auto
        &-next
            top: auto
            bottom: -9px  

        &-pagination-box
            width: 100%
            height 320px
            position: absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)
            overflow hidden
            // border: red 1px solid 

        &-pagination
            position: absolute
            width: ctlboxWidth
            flex-direction: row
            z-index 2
            top: 0
            left: 50%
            transition: transform 1s
            transform: translate(-50%, 0)
            // border: blue 1px solid

            .swiper-pagination-bullet
                display: block
                width: ctlboxWidth
                height @width
                margin-bottom: 10px
                background-position: center center
                background-size: 100% auto
                background-repeat: no-repeat 
                opacity: 1
                overflow hidden
                position relative
                background-color: #cccccc

                img
                    width: 100%
                    height auto
                    position: absolute
                    opacity: 0.5
                    top: 50%
                    left: 50%
                    transform: translate(-50%, -50%)
                
                &-active
                    background-color: #666666
                    opacity: 1
                    img
                        opacity: 1