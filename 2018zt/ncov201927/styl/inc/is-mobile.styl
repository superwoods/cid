    .list
        li
            liHeight = 26px
            font-size: 16px
            position relative
            line-height: liHeight
            padding-left: 10px
            margin-bottom: 4px
            height auto

            &:before
                content: ''
                width: 4px
                height @width
                position: absolute
                top: ((liHeight - @height) / 2) - 1
                left: 0
                background-color: blueColor
                pointer-events: none
                border-radius: 100%

    .more
