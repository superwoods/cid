.is-mobile
    rotHeight = 220px

    .rot
        position relative
        overflow visible
        width: 96%
        margin: 0 2%

        &
        .item
        .pic
            height: rotHeight
        
        .item
        .pic
            width: 100%
            overflow hidden

        .item
            position relative
            .pic
                // position: absolute
                // z-index 1
                // background-image: url(/bundle/icon-logo.png)
                // background-position: center center
                // background-size: 60% auto
                // background-color: #cccccc
                // background-repeat: no-repeat

                img
                    position: absolute
                    width: auto
                    height 100%
                    top: 50%
                    left: 50%
                    transform: translate(-50%, -50%)

            .title
                width 100%
                position: absolute
                z-index 2
                bottom: 0
                left: 0
                // background-image: url(rot-title-bg.png)
                height: 49px
                line-height: @height
                
                .text
                    width: 93%
                    margin: 0 auto
                &
                a
                    font-size: 16px
                    color: #ffffff
        .rot-prev
        .rot-next
        .swiper-pagination
            display: none

    .area
        width: 100%
        overflow hidden

