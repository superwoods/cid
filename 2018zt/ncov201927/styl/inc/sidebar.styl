.sidebar
    width: contentBoxRightWidth
    padding-top: 12px
    
    .colBox
        
        .sidebarTitleBox
            border-bottom: #e5e5e5 1px solid
            margin-bottom: 16px
            padding-bottom: 9px

            .bigTitle
                font-size: 16px
                line-height: 28px
                margin-bottom: 6px

                &
                & a
                    color: #333333

            .abs
                font-size: 12px
                color: #999999
                display inline
                

                a
                    color: #429be7
                    margin-left: 6px

        .list
            margin-bottom: 30px
            // margin-left: 4%
            li
                line-height: 30px
                padding-left: 14px

                &:before
                    top: 13px

    
        .colTiny
            colHeight = 30px

            font-size: 20px
            line-height: colHeight
            height colHeight
            position relative
            text-align: left 
            padding-left: 14px
            margin-bottom: 10px

            &
            & a
                color: #429be7
                font-weight: 600

            &:after
                content: ''
                position: absolute
                height colHeight - 12px
                width: 5px
                background-color: #429be7
                display: block
                pointer-events: none
                top: 50%
                left 0
                transform: translateY(-50%)

        .pic
            position relative

            img
                width: 100%
                height auto
                z-index 1

            .videoSrc
                overflow hidden
                text-indent: -888px
                position: absolute
                z-index 2
                content: ''
                background-color: #f6f6f6
                border: 1px solid #c5c5c5
                border-radius: 3px;
                box-shadow: 0 0 10px rgba(0,0,0,.3)
                right: 14px
                bottom: 16px
                width: 40px
                height: 30px
                pointer-events: none


                &:before
                    content: '';
                    position: absolute;
                    z-index: 3;
                    width: 0;
                    height: 0;
                    border-style: solid;
                    border-width: 8px 0 8px 13.9px;
                    border-color: transparent transparent transparent #429be7;
                    left: 50%;
                    top: 50%;
                    transform: translate(-32%, -52%)
                    border-radius: 3px;

        
.is-mobile
    .sidebar
        width: mobileWidth
        margin: 0 auto 30px
        border-top: #CCC 1px solid 
        padding-top: 20px
