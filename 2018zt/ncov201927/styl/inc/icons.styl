.icons-col
    paddings = 20px
    width: areaWidth - paddings * 2
    margin: 0 auto 20px
    background-color: #f1f1f1
    line-height: 50px
    font-size: 20px
    padding: 0 paddings
    font-weight: 400

    &
    & a
        color: #1f74c5

.icons
    width: areaWidth 
    margin: 0 auto 30px
    display: flex
    justify-content: space-between
    flex-wrap: wrap

    .item
        padding: 15px 50px
        text-align: center
        .pic
            img
                // width: d dd 62px
                height 62px
        .text
            font-size: 16px
            line-height: 20px
            color: #999999
          
