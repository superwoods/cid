.rotBig
    rotBigWidth = 1000px
    rotBigHeight = 600px // 600 = 16:10

    position relative
    overflow hidden
    background-color: #cccccc
    border-radius: 4px

    .noPic
        background-image: url(/bundle/icon-logo.png);
        background-position: center center;
        background-size: auto;
        background-repeat: no-repeat
        height 100%

    &
    .item
    .pic
        width: rotBigWidth
        height: rotBigHeight
        overflow hidden
        
    .item
        position relative
        .pic
            position: absolute
            z-index 1
            background-image: url(/bundle/icon-logo.png)
            background-position: center center
            background-size: auto auto
            background-color: #cccccc
            background-repeat: no-repeat
            left: 50%;
            transform: translateX(-50%);
            
            a
                width: 100%
                height 100%

            img
                position: absolute
                width: auto
                height 100%
                top: 50%
                left: 50%
                transform: translate(-50%, -50%)
        .title
            // width 100%
            // position: absolute
            // z-index 2
            // bottom: 0
            // left: 0
            // // background-image: url(rot-title-bg.png)
            // // background-position: 0 bottom
            // // background-repeat: repeat-x
            // height: 50px
            // line-height: @height - 10px
            // background-image: titleBg
            title()
            padding-bottom: 16px

            .text
                text-align: center
                margin-left: 1em
                margin-right: 1em
                // margin-top: 10px
                overflow hidden

            &
            a
                font-size: 16px
                color: #ffffff
               
    btnWidth = 40px
    .rot-prev
    .rot-next
        position: absolute
        width: btnWidth
        height 62px
        top: 50%
        margin-top: -(@height / 2)
        z-index 3
        cursor pointer
        // display: none
        transition: all 0.5s
        background-size: auto
        // color: #000000

        &:hover
            opacity 1

        &:active
            opacity 0.3

        &.swiper-button-disabled
            opacity 0.3 !important
            pointer-events: visible
            cursor: default

    .rot-prev
        left - btnWidth
        // background-image: url(rot-icon-prev.png)

    .rot-next
        right - btnWidth
        // background-image: url(rot-icon-next.png)
    
    &:hover
        .rot-prev
            left 0
        .rot-next
            right 0

    .swiper-pagination
        bottom: 4px
        // left: auto
        // right: 10px
        width: 100%
        text-align: center

    .swiper-pagination-bullet
        width: 8px
        height: 8px
        display: inline-block
        border-radius: 100%
        background: var(--moo-roBig-bullet)
        opacity: 1

    .swiper-pagination-bullet-active 
        background: var(--moo-roBig-bullet-active)


.is-mobile
    rotBigHeight = 220px
    
    .rotBig
        position relative
        // overflow visible
        width: 94%
        margin: 0 auto
        height auto
        background: none

        .item
        .pic
            height: rotBigHeight
        
        .item
        .pic
            width: 100%
            overflow hidden

        .item
            border-radius: 4px
            position relative
            
            .pic
                position: absolute
                z-index 1
                // background-image: url(/bundle/icon-logo.png)
                // background-position: center center
                background-size: 60% auto
                background-color: #cccccc
                background-repeat: no-repeat

                img
                    position: absolute
                    width: auto
                    height 100%
                    top: 50%
                    left: 50%
                    transform: translate(-50%, -50%)

            .title
                width 100%
                position: absolute
                z-index 2
                bottom: 0
                left: 0
                // background-image: url(rot-title-bg.png)
                height: 49px
                line-height: @height
                
                .text
                    width: 93%
                    margin: 0 auto
                &
                a
                    font-size: 16px
                    color: #ffffff
        .rot-prev
        .rot-next
        .swiper-pagination
            display: none

.is-pc
    .rotRound
        background: none
        .swiper-slide
            width: 90%
            height auto
            border-radius: 4px

        .swiper-slide-next
        .swiper-slide-prev
            .pic
                background: #666666
                img
                    opacity: 0.5

        .item
            .pic
                img
                    width: 100%
                    height auto