        .pic
            pic()

            &
            & a
                width rotPicABigAndMoreTinyItemBoxHeight
                height rotPicABigAndMoreTinyItemBoxHeight

            img
                img()
                height 100%
                width: auto

        .title
            title()
            width rotPicABigAndMoreTinyItemBoxHeight
