        overflow hidden
        width: 705px

        .itemBoxRight-item
            itemBoxRightItemWidth = 230px
            width: itemBoxRightItemWidth
            height rotPicABigAndMoreTinyItemBoxHeight
            background-color: var(--moo-color)
            position relative

            .pic
                pic()
                position relative
                
                &
                & a
                    width itemBoxRightItemWidth
                    height itemBoxRightItemWidth

                img
                    img()
                    height 100%
                    width: auto

            .title // .itemBoxRight .title
                title()
                width itemBoxRightItemWidth
                font-size: 16px
                position relative
                background: none
                height 230px
                position relative
                // background-color: #f8f8f8

                &
                & a 
                    font-size: 20px
                    color: #ffffff
                    font-weight: bold
                    text-align: center
                
                .text
                    text()
                    width auto
                    margin: 30px 1em 20px
                    line-height: 32px
                    height (@line-height * 3)
                    overflow hidden
                    // border: red 1px solid 

                    a
                        height 100%
                        position relative

                .icon-jump
                    display: block
                    margin: 10px auto 0
                    width: 30px
                    height @width
                    background-image: url(icon-jump.png)
                    background-position: center center
                    background-repeat: no-repeat
                    background-size: 100% 100%

            &:nth-child(even)
                display: flex
                flex-direction: column-reverse
                justify-content: space-between
                

