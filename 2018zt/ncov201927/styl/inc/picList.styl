.picListBox
    overflow hidden
    
.picList
    liMarginRight = 20px

    width areaWidth + liMarginRight
    position relative
    display: flex
    flex-wrap: wrap
    // justify-content: space-between
    height auto
    margin-top: 20px

    li
        display: block
        width 31%
        margin-right: liMarginRight + 3px
        
        a
            width: 100%
            height 100%

        .pic
            width: 100%
            height 170px
            position relative
            overflow hidden
            border-radius: 4px

            &:before
            &:after
                position: absolute
                left 12px
                bottom: 12px
                content: ''
                display block
                pointer-events: none
                

            &:before
                width: 0
                height: 0
                border-style: solid
                border-width: 8px 0 8px 13.9px
                border-color: transparent transparent transparent #ffffff
                transform: translate(14px, -11.5px)
                z-index 4

            &:after
                width: 32px
                height @width 
                border: 3px #ffffff solid
                border-radius: 100%
                box-shadow: 0 0 6px rgba(#000000, 0.6)
                background-color: rgba(#000000, 0.2)
                z-index 3

            img 
                width: 100%
                height auto
        .text
            margin: 6px 10px 20px
            .title
                font-size: 16px
                line-height: 30px
                text-align: center
                font-weight: 400
                margin-bottom: 3px

            .abs
                font-size: 14px
                line-height 24px
