        .swiper-pagination-bullet
            // outline: none
            width: 20px
            // height 4px
            // border-radius: (@height / 2)
            // background-color: #e4e4e4
            // opacity 1 

        // .swiper-pagination-bullet-active
        //     background-color: #c30e11

        .swiper-pagination-bullet+.swiper-pagination-bullet
            margin-left: 3px

    .rot2BoxBox
        padding: 0
        margin-bottom: 0

    .rot2Box
