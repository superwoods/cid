.spCol3List
    background-image: url(col3Bg.png)
    display: flex
    flex-direction: row
    justify-content: space-between
    margin-top: 40px
    margin-bottom: 30px
    position relative

    .insideBox
        .col3Title
            width: 205px
            height 250px
            margin: 22px auto 0

        .list
            border: 1px dashed #cccccc
            background-color: #ffffff
            border-radius: 10px
            display: flex
            padding: 20px 50px
            margin-right: 30px
            flex-wrap: wrap
            justify-content: space-around

            li
                width 45%

.is-mobile
    .spCol3List
        display: block

        .insideBox
            .col3Title
                width: 100%
                height 200px
                background-size: auto 100%

            .list
                border: 1px dashed #cccccc
                background-color: #ffffff
                border-radius: 10px
                display: block
                padding: 20px 30px
                margin: 10px auto 30px
                width 80%

                li
                    width 100%