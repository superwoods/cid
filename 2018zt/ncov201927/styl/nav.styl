navFlex()
    display: flex
    justify-content: space-between
    align-items: center

.nav
    border-top: var(--moo-nav-borderTopColor) 2px solid
    width: 100%
    height: 80px
    margin: 0 auto 20px
    // box-shadow: 0 -6px 20px #fff0c3
    // navBg()
    background-color: var(--moo-navBg)
    
    &-in // .nav-in 
        width: areaWidth 
        height: 80px
        navFlex()
        margin: 0 auto

    .logo
        height 42px
        margin: 0 60px 0 40px

    .btn-box
        width: 100%
        display: flex
        justify-content: space-between

        a
            flex: 1 0 auto
            display: flex
            align-items: center
            justify-content: center
            // padding: 0 24px
            font-size: 16px
            height @font-size - 6
            line-height: @font-size
            border-right: 1px rgba(#ffffff, 0.6) solid
            color: #ffffff
            font-weight: 500
            opacity 0.8

            &:last-child
                border: none

            // &:hover
            //     color: #000000 !important

            &.active
                font-size: 24px
                font-weight: 800
                opacity 1

